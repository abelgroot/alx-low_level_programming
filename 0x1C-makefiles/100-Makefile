# 100-Makefile
CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

.PHONY: all clean oclean fclean re

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

main.o: main.c m.h

school.o: school.c m.h

clean:
	$(RM) *~ *.swp \#*\#

oclean:
	$(RM) $(OBJ)

fclean: clean
	rm -f $(NAME)

re: fclean all
