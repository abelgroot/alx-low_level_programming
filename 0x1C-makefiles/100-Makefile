# 100-Makefile
NAME = school
CC = gcc
SRC = main.c School.c
OBJ = $(SRC:.c=.o)
CFLAGS = -Wall -Werror -Wextra -pedantic
RM = rm -f

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

%.o: %.c m.h
	$(CC) -c $<

clean:
	$(RM) $(NAME)
	$(RM) *~ \#*\# *.swp *.tmp

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all
